<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.heren.turtle.server.dao.hisDao.HisUsersDao">

    <resultMap id="usersMapper" type="java.util.Map">
        <result column="db_user" property="dbUser"/>
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_dept" property="userDept"/>
        <result column="user_ward" property="userWard"/>
    </resultMap>

    <select id="queryUserDept" parameterType="java.lang.String" resultMap="usersMapper">
        select u.db_user,
        u.user_id,
        u.user_name,
        u.user_dept
        from users u
        <where>
            u.user_dept not in (select dvw.ward_code from dept_dict dd,dept_vs_ward dvw where dvw.dept_code=dd.dept_code)
        </where>
    </select>

    <select id="queryUserWard" parameterType="java.lang.String" resultMap="usersMapper">
        select u.db_user,
        u.user_id,
        u.user_name,
        u.user_dept as user_ward
        from users u
        <where>
            u.user_dept in (select dvw.ward_code from dept_dict dd,dept_vs_ward dvw where dvw.dept_code=dd.dept_code)
        </where>
    </select>

    <resultMap id="empMap" type="java.util.Map">
        <result column="emp_no" property="emp_no"/>
        <result column="name" property="emp_name"/>
        <result column="input_code" property="input_code"/>
        <result column="dept_code" property="dept_code"/>
        <result column="title" property="place_name"/>
        <result column="dept_name" property="dept_name"/>
    </resultMap>

    <select id="queryNiEmp" parameterType="java.util.Map" resultMap="empMap">
        SELECT
            sd.emp_no,
            sd.name,
            sd.input_code,
            sd.dept_code,
            sd.title,
            dd.dept_name
        FROM staff_dict sd, dept_dict dd
        <where>
            and sd.dept_code = dd.dept_code (+)
            <if test="empNo!=null">
                and sd.emp_no=#{empNo,jdbcType=VARCHAR}
            </if>
            <if test="deptCode!=null">
                and sd.dept_code=#{deptCode,jdbcType=VARCHAR}
            </if>
        </where>
    </select>

</mapper>